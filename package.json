{
  "name": "warlock-spell-browser",
  "version": "1.0.0-RC1",
  "description": "A warlock spell to manage client-side web applications.",
  "homepage": "https://github.com/ngbp/spell-browser",
  "author": {
    "name": "Warlock Team",
    "url": "http://getwarlock.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ngbp/spell-browser.git"
  },
  "bugs": {
    "url": "https://github.com/ngbp/spell-browser/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/ngbp/spell-browser/blob/master/LICENSE"
    }
  ],
  "engines": {
    "node": ">= 0.10.0"
  },
  "keywords": [
    "warlockspell"
  ],
  "warlock": {
    "paths": {
      "browser": {
        "source": "src",
        "build": "build",
        "compile": "bin",
        "source_app": "<%= paths.browser.source %>/app",
        "build_js": "<%= paths.browser.build %>/scripts",
        "build_css": "<%= paths.browser.build %>/styles",
        "source_assets": "<%= paths.browser.source %>/assets",
        "build_assets": "<%= paths.browser.build %>/assets",
        "compile_assets": "<%= paths.browser.compile %>/assets"
      }
    },
    "globs": {
      "browser": {
        "css": [
          "<%= paths.browser.source_app %>/**/*.css"
        ],
        "js": [
          "<%= paths.browser.source_app %>/**/*.js"
        ],
        "assets": [
          "<%= paths.browser.source_assets %>/**/*"
        ],
        "html": [
          "<%= paths.browser.source %>/index.html",
          "<%= paths.browser.source_app %>/**/*.html"
        ]
      }
    },
    "tasks": {
      "default": [ "browser-spell" ],
      "browser-spell": [
        "$$browser-js"
      ]
    },
    "pipelines": {
      "browser-js": {
        "files": [
          "<%= globs.browser.js %>"
        ],
        "file_options": {
          "base": "<%= paths.browser.source_app %>"
        },
        "dest": "<%= paths.browser.build_js %>",
        "phases": {
          "prod": [ "concat", "min" ]
        },
        "streams": {
          "lint": {
            "lint": {
              "bitwise": true,
              "curly": true
            },
            "failOnError": true
          },
          "min": {
            "outSourceMap": true
          },
          "concat": "all.min.js"
        }
      },
      "browser-vendorjs": {
        "files": [ "<%= globs.browser.vendorjs %>" ],
        "join": {
          "target": "browser-js",
          "before": "concat",
          "reverse": true
        }
      },
      "browser-css": {
        "streams": {
          "lint": {
            "failOnError": {
              "fail": true
            }
          },
          "concat": "all.min.css"
        },
        "browser-html": {
          "streams": {
            "browser-html-template": {
              "build": "<%= paths.build %>",
              "compile": "<%= paths.compile %>"
            }
          }
        }
      }
    }
  },
  "peerDependencies": {
    "warlock-engine": ">=1.0.0-alpha.2"
  },
  "dependencies": {
    "csslint": "0.10",
    "gulp-concat": "~2.1",
    "gulp-jshint": "~1.3",
    "gulp-minify-css": "~0.3",
    "gulp-uglify": "~0.2",
    "jshint-stylish": "~0.1"
  }
}
